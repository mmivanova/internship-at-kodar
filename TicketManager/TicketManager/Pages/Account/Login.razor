@page "/login"
@using TicketManager.Data

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Sign in</h3>

                        <EditForm Model="@_appAccount" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator/>
                            <ValidationSummary/>

                            <div class="form-outline mb-4">
                                Username:
                                <InputText type="text" placeholder="Username" @bind-Value="_appAccount.Username"/>
                            </div>

                            <div class="form-outline mb-4">
                                Password:
                                <InputText type="password" placeholder="Password" @bind-Value="_appAccount.Password"/>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Sign in</button>

                            <div>
                                <p class="mb-0">Don't have an account? <a href="https://localhost:5001/registration" class="fw-bold">Sign Up</a></p>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    Account _appAccount = new();

    private void HandleValidSubmit()
    {
        Console.WriteLine("Valid submit is handled.");
    }

}